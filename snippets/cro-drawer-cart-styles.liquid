<style id="{{ section.id }}-style">
    #shopify-section-{{ section.id }}{
        width: 0;
        height: 100vh;
        margin: 0;
        padding: 0;
        display: block;
        position: fixed;
        top:0;
        left: 100%;
    }
    #shopify-section-{{ section.id }} *{
        margin: 0;
        padding: 0;
        display: flex;
    }
    slt010-cart-drawer-block#{{ section.id }}-block{
        width: 0;
        height: 100%;
        margin: 0 auto;
        padding: 0;
        display: none;
        position: fixed;
        top: 0;
        left: 100%;
        opacity: 0;
        overflow: hidden;
        z-index: -9999;
        transition-delay: 1ms;
        transition-duration: 20ms;
        transition-property: all;
        transition-timing-function: ease;
    }
    slt010-cart-drawer-block#{{ section.id }}-block[data-opened="true"] {
        width: 100vw;
        display: flex;
        left: 0;
        opacity: 1;
        z-index: 9999999;
        transition-delay: 1ms;
        transition-duration: 20ms;
        transition-property: all;
        transition-timing-function: ease;
    }
    slt010-cart-drawer-block#{{ section.id }}-block slt010-cart-drawer-overlay{
        width: 100vw;
        height: 100vh;
        margin: 0;
        padding: 0;
        display: flex !important;
        position: absolute;
        top: 0;
        left: 0;
        background-color: rgba(0,0,0,.5);
        z-index: -1;
        opacity: 0;
        transition-delay: 1ms;
        transition-duration: 1000ms;
        transition-property: all;
        transition-timing-function: ease;
    }
    slt010-cart-drawer-block#{{ section.id }}-block[data-opened="true"] slt010-cart-drawer-overlay{
        left: 0;
        opacity: 1;
        transition-delay: 1ms;
        transition-duration: 2000ms;
        transition-property: all;
        transition-timing-function: ease;
    }
</style>