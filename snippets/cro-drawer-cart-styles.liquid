<style id="{{ section.id }}-style">
    body.slt010-cart-drawer-block-open{
        width: 100vw;
        height: 100vh;
        overflow: hidden;
    }
    #shopify-section-{{ section.id }}{
        width: 0;
        height: 100vh;
        margin: 0;
        padding: 0;
        display: block;
        position: fixed;
        top:0;
        left: 100%;
        z-index: 99;
    }

    slt010-cart-drawer-block{
        width: 0;
        height: 100%;
        margin: 0 auto;
        padding: 0;
        display: none;
        position: fixed;
        top: 0;
        left: 100%;
        opacity: 0;
        overflow: hidden;
        z-index: -9999;
        transition-delay: 1ms;
        transition-duration: 20ms;
        transition-property: all;
        transition-timing-function: ease;
    }
    slt010-cart-drawer-block[data-opened="true"] {
        width: 100vw;
        display: flex;
        left: 0;
        opacity: 1;
        z-index: 99;
        transition-delay: 1ms;
        transition-duration: 20ms;
        transition-property: all;
        transition-timing-function: ease;
    }

    slt010-cart-drawer-block slt010-cart-drawer-overlay{
        width: 100vw;
        height: 100vh;
        margin: 0;
        padding: 0;
        display: flex !important;
        position: absolute;
        top: 0;
        left: 0;
        background-color: rgba(0,0,0,.5);
        z-index: -1;
        opacity: 0;
        transition-delay: 1ms;
        transition-duration: 1000ms;
        transition-property: all;
        transition-timing-function: ease;
    }
    slt010-cart-drawer-block[data-opened="true"] slt010-cart-drawer-overlay{
        left: 0;
        opacity: 1;
        transition-delay: 1ms;
        transition-duration: 2000ms;
        transition-property: all;
        transition-timing-function: ease;
    }

    slt010-cart-drawer-block slt010-cart-drawer-container{
        width: 90vw;
        max-width: 500px;
        height: 100%;
        margin: 0;
        padding: 0;
        display: flex;
        flex: 0 0 90vw;
        position: absolute;
        top: 0;
        right: -100%;
        overflow: hidden;
        z-index: 0;
        transition-delay: 1ms;
        transition-duration: 900ms;
        transition-property: right;
        transition-timing-function: ease;
    }
    slt010-cart-drawer-block[data-opened="true"] slt010-cart-drawer-container{
        right: 0;
        transition-delay: 1ms;
        transition-duration: 1000ms;
        transition-property: right;
        transition-timing-function: ease;
    }
    slt010-cart-drawer{
        height: 100%;
        margin: 0 auto;
        padding: 0;
        display: flex;
        flex: 0 0 100%;
        flex-direction: column;
        align-content: flex-start;
        position: relative;
        background-color: #fff;
        border-radius: 15px;
        z-index: 0;
        overflow: hidden;
    }

    slt010-cart-drawer-header{
        width: 100%;
        margin: 0;
        padding: 10px 20px;
        border-bottom: solid 1px #e3e3e3;
        display: flex;
        flex: 0 0 auto;
        justify-content: center;
        align-items: center;
        font-size: 30px;
        font-weight: 600;
        text-align: center;
        text-transform: uppercase;
        letter-spacing: 0px;
        line-height: 34px;
        color: #232323;
    }
    slt010-cart-drawer-progress-bar{
        width: 100%;
        margin: 0;
        padding: 0;
        display: flex;
        flex: 0 0 auto;
        flex-wrap: wrap;
    }
    slt010-cart-drawer-countdown{
        width: 100%;
        flex: 0 0 auto;
    }
    slt010-cart-drawer-body{
        width: 100%;
        margin: 0;
        padding: 0 15px;
        display: flex;
        flex: 1 1 100%;
        flex-wrap: wrap;
        overflow: auto;
        scrollbar-width: thin;
        scrollbar-color: rgba(0,0,0,1) rgba(0,0,0,.3);
    }
    slt010-cart-drawer-body::-webkit-scrollbar{
        width: 5px;
    }
    slt010-cart-drawer-body::-webkit-scrollbar-track{
        background-color: rgba(0,0,0,.3);
    }
    slt010-cart-drawer-body::-webkit-scrollbar-thumb{
        background-color: rgba(0,0,0,1);
    }
    slt010-cart-drawer-body-list{
        margin: 0;
        padding: 0 5px;
        display: flex;
        flex: 0 0 100%;
        flex-direction: column;
    }
    slt010-cart-drawer-body-list-item{
        width: 100%;
        margin: 0;
        padding: 20px 0;
        border-bottom: solid 1px #eee;
        display: flex;
        flex: 0 0 auto;
    }
    [data-slt010-class="slt010-cart-drawer-body-list-item-media"]{
        width: 90px;
        height: 90px;
        margin: 0;
        padding: 0;
        display: flex;
        flex: 0 0 90px;
    }
    [data-slt010-class="slt010-cart-drawer-body-list-item-picture"]{
        width: 100%;
        height: 0;
        margin: 0;
        padding: 100% 0 0;
        display: flex;
        flex: 0 0 100%;
        position: relative;
    }
    [data-slt010-class="slt010-cart-drawer-body-list-item-image"]{
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
    slt010-cart-drawer-body-list-item-meta{
        margin: 0 0 0 20px;
        padding: 0;
        display: flex;
        flex: 1 1 100%;
        flex-wrap: wrap;
        align-content: flex-start;
        position: relative;
    }
    [data-slt010-class="slt010-cart-drawer-body-list-item-title"]{
        margin: 0;
        padding: 0 30px 0 0;
        display: flex;
        flex: 0 0 100%;
        align-items: center;
        font-size: 14px;
        font-weight: 700;
        color: #535353;
    }
    [data-slt010-class="slt010-cart-drawer-body-list-item-variant-title"]{
        margin: 0;
        padding: 0;
        display: flex;
        flex: 0 0 100%;
        align-items: center;
        font-size: 12px;
        font-weight: 400;
        color: #535353;
    }
    [data-slt010-class="slt010-cart-drawer-body-list-item-discount-list"]{
        margin: 0;
        padding: 0;
        display: flex;
        flex: 0 0 100%;
        align-items: center;
        font-size: 12px;
        font-weight: 400;
        color: #44be70;
    }
    [data-slt010-class="slt010-discount"]{
        color: #44be70;
    }
    [data-slt010-class="slt010-cart-drawer-body-list-item-remove-btn"]{
        width: 15px;
        min-width: auto;
        height: 15px;
        min-height: auto;
        margin: 0;
        padding: 0;
        position: absolute;
        top: 3px;
        right: 0;
        z-index: 1;
        outline: none;
        border: none;
        box-shadow: none;
        background: none;
        cursor: pointer;
        line-height: 20px;
        color: #999;
        font-size: 14px;
        cursor: pointer;
    }
    [data-slt010-class="slt010-cart-drawer-body-list-item-remove-btn"] svg{
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    [data-slt010-class="slt010-cart-drawer-body-list-item-qty-container"]{
        margin: 5px 0 0;
        padding: 0;
        display: flex;
        flex: 0 0 50%;
        align-items: center;
    }
    [data-slt010-class="slt010-cart-drawer-body-list-item-qty-wrap"]{
        border: solid 1px #e3e3e3;
        display: flex;
        flex: 0 0 auto;
        align-items: center;
    }
    [data-slt010-class="slt010-cart-drawer-body-list-item-qty-wrap"] > button{
        width: 36px;
        height: 24px;
        margin: 0;
        padding: 0;
        background-color: transparent;
        border: 0;
        display: flex;
        flex: 0 0 36px;
        align-items: center;
        justify-content: center;
        font-size: 16px;
        font-weight: 700;
        color: #232323;
        cursor: pointer;
    }
    [data-slt010-class="slt010-cart-drawer-body-list-item-qty-wrap"] > input{
        width: 36px;
        height: 24px;
        margin: 0;
        padding: 0;
        background-color: transparent;
        border: solid 1px transparent;
        border-left-color: #e3e3e3;
        border-right-color: #e3e3e3;
        display: flex;
        flex: 0 0 36px;
        align-items: center;
        justify-content: center;
        font-size: 12px;
        font-weight: 700;
        color: #232323;
        text-align: center;
    }
    [data-slt010-class="slt010-cart-drawer-body-list-item-qty-wrap"] > input::-webkit-outer-spin-button,
    [data-slt010-class="slt010-cart-drawer-body-list-item-qty-wrap"] > input::-webkit-inner-spin-button{
        -webkit-appearance: none;
        margin: 0;
    }
    [data-slt010-class="slt010-cart-drawer-body-list-item-qty-wrap"] > input{
        -moz-appearance: textfield;
    }
    [data-slt010-class="slt010-cart-drawer-body-list-item-price"]{
        margin: 5px 0 0;
        padding: 0;
        display: flex;
        flex: 0 0 50%;
        justify-content: flex-end;
        align-items: center;
        font-size: 12px;
        font-weight: 400;
        color: #535353;
    }

    slt010-cart-drawer-empty{
        margin: 0;
        padding: 0;
        display: flex;
        flex: 1 1 100%;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    slt010-cart-drawer-footer{
        width: 100%;
        margin: 0;
        padding: 20px;
        border-top: solid 1px #e3e3e3;
        display: flex;
        flex: 0 0 auto;
        flex-wrap: wrap;
    }
    slt010-cart-drawer-footer:empty{
        display: none;
    }

    slt010-cart-drawer-close-button{
        width: 30px;
        height: 30px;
        margin: 0;
        padding: 0;
        background-color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        position: absolute;
        top: 10px;
        right: 20px;
        font-size: 40px;
        line-height: .7;
        cursor: pointer;
    }
</style>