<style id="{{ section.id }}-style">
    body.slt010-cart-drawer-block-open{
        width: 100vw;
        height: 100vh;
        overflow: hidden;
    }
    #shopify-section-{{ section.id }}{
        width: 0;
        height: 100vh;
        margin: 0;
        padding: 0;
        display: block;
        position: fixed;
        top:0;
        left: 100%;
        z-index: 99;
    }
    #shopify-section-{{ section.id }} *{
        margin: 0;
        padding: 0;
        display: flex;
    }
    slt010-cart-drawer-block{
        width: 0;
        height: 100%;
        margin: 0 auto;
        padding: 0;
        display: none;
        position: fixed;
        top: 0;
        left: 100%;
        opacity: 0;
        overflow: hidden;
        z-index: -9999;
        transition-delay: 1ms;
        transition-duration: 20ms;
        transition-property: all;
        transition-timing-function: ease;
    }
    slt010-cart-drawer-block[data-opened="true"] {
        width: 100vw;
        display: flex;
        left: 0;
        opacity: 1;
        z-index: 99;
        transition-delay: 1ms;
        transition-duration: 20ms;
        transition-property: all;
        transition-timing-function: ease;
    }

    slt010-cart-drawer-block slt010-cart-drawer-overlay{
        width: 100vw;
        height: 100vh;
        margin: 0;
        padding: 0;
        display: flex !important;
        position: absolute;
        top: 0;
        left: 0;
        background-color: rgba(0,0,0,.5);
        z-index: -1;
        opacity: 0;
        transition-delay: 1ms;
        transition-duration: 1000ms;
        transition-property: all;
        transition-timing-function: ease;
    }
    slt010-cart-drawer-block[data-opened="true"] slt010-cart-drawer-overlay{
        left: 0;
        opacity: 1;
        transition-delay: 1ms;
        transition-duration: 2000ms;
        transition-property: all;
        transition-timing-function: ease;
    }

    slt010-cart-drawer-block slt010-cart-drawer-container{
        width: 90vw;
        max-width: 500px;
        height: 100%;
        margin: 0;
        padding: 0;
        display: flex;
        flex: 0 0 90vw;
        position: absolute;
        top: 0;
        right: -100%;
        overflow: hidden;
        z-index: 0;
        transition-delay: 1ms;
        transition-duration: 900ms;
        transition-property: right;
        transition-timing-function: ease;
    }
    slt010-cart-drawer-block[data-opened="true"] slt010-cart-drawer-container{
        right: 0;
        transition-delay: 1ms;
        transition-duration: 1000ms;
        transition-property: right;
        transition-timing-function: ease;
    }
    slt010-cart-drawer{
        height: 100%;
        margin: 0 auto;
        padding: 25px;
        display: flex;
        flex: 0 0 100%;
        position: relative;
        background-color: #fff;
        z-index: 0;
        overflow: hidden;
    }

    slt010-cart-drawer-close-button{
        width: 20px;
        height: 20px;
        margin: 0;
        padding: 0;
        background-color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        position: absolute;
        top: 3px;
        right: 3px;
        font-size: 20px;
        line-height: .7;
        cursor: pointer;
    }
</style>