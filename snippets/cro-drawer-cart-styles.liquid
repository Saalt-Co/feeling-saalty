<style id="{{ section.id }}-style">
    body.slt010-cart-drawer-block-open{
        width: 100vw;
        height: 100vh;
        overflow: hidden;
    }
    #shopify-section-{{ section.id }}{
        width: 0;
        height: 100vh;
        margin: 0;
        padding: 0;
        display: block;
        position: fixed;
        top:0;
        left: 100%;
        z-index: 99;
    }
    slt010-cart-drawer-block{
        width: 100vw;
        height: 100%;
        margin: 0 auto;
        padding: 0;
        display: flex;
        position: fixed;
        top: 0;
        left: 100%;
        opacity: 0;
        overflow: hidden;
        z-index: -9999;
        transition-delay: 1000ms;
        transition-duration: 20ms;
        transition-property: all;
        transition-timing-function: ease;
    }
    slt010-cart-drawer-block[data-opened="true"] {
        left: 0;
        opacity: 1;
        z-index: 99;
        transition-delay: 1ms;
        transition-duration: 20ms;
        transition-property: all;
        transition-timing-function: ease;
    }

    slt010-cart-drawer-block slt010-cart-drawer-overlay{
        width: 100vw;
        height: 100vh;
        margin: 0;
        padding: 0;
        display: flex !important;
        position: absolute;
        top: 0;
        left: 0;
        background-color: rgba(0,0,0,.5);
        z-index: -1;
        opacity: 0;
        transition-delay: 1ms;
        transition-duration: 10ms;
        transition-property: all;
        transition-timing-function: ease;
    }
    slt010-cart-drawer-block[data-opened="true"] slt010-cart-drawer-overlay{
        left: 0;
        opacity: 1;
        transition-delay: 1ms;
        transition-duration: 10ms;
        transition-property: all;
        transition-timing-function: ease;
    }

    slt010-cart-drawer-block slt010-cart-drawer-container{
        width: 90vw;
        max-width: 500px;
        height: 100%;
        margin: 0;
        padding: 0;
        display: flex;
        flex: 0 0 90vw;
        position: absolute;
        top: 0;
        right: -100%;
        overflow: hidden;
        z-index: 0;
        transition-delay: 1ms;
        transition-duration: 1000ms;
        transition-property: right;
        transition-timing-function: cubic-bezier(0.075, 0.82, 0.165, 1);
    }
    slt010-cart-drawer-block[data-opened="true"] slt010-cart-drawer-container{
        right: 0;
        transition-delay: 10ms;
        transition-duration: 1000ms;
        transition-property: right;
        transition-timing-function: cubic-bezier(0.075, 0.82, 0.165, 1);
    }
    slt010-cart-drawer{
        height: 100%;
        margin: 0 auto;
        padding: 0;
        display: flex;
        flex: 0 0 100%;
        flex-direction: column;
        align-content: flex-start;
        position: relative;
        background-color: #fff;
        border-radius: 15px;
        z-index: 0;
        overflow: hidden;
    }

    {%- for block in section.blocks -%}
        {%- case block.type -%}
            {%- when 'header' -%}
                slt010-cart-drawer-header{
                    width: 100%;
                    margin: 0;
                    padding: 10px 20px;
                    background-color: {{ block.settings.bg-color }};
                    border-bottom: solid 1px #e3e3e3;
                    display: flex;
                    flex: 0 0 auto;
                    justify-content: center;
                    align-items: center;
                    font-size: {{ block.settings.font-size }}px;
                    font-weight: 600;
                    text-align: center;
                    text-transform: uppercase;
                    letter-spacing: 0px;
                    color: {{ block.settings.font-color }};
                }
                @media all and (max-width: 767px) {  
                    slt010-cart-drawer-header{
                        font-size: {{ block.settings.font-size-mobile }}px;
                    }
                }
                
            {%- when 'countdown' -%}
                slt010-cart-drawer-countdown{
                    width: 100%;
                    flex: 0 0 auto;
                }
                [data-countdown-minutes],
                [data-countdown-seconds]{
                    width: 20px;
                    display: flex;
                    justify-content: center;
                    color: {{ block.settings.font-color }};
                }
                [data-slt010-class="slt010-countdown-container"]{
                    height: auto;
                    margin: 0 0 10px;
                    padding: 15px;
                    background-color: {{ block.settings.bg-color }};
                    border-radius: 5px;
                    display: flex;
                    flex-direction: column;
                }
                [data-slt010-class="slt010-countdown-title"]{
                    width: 100%;
                    height: auto;
                    margin: 0;
                    padding: 0;
                    display: flex;
                    flex: 0 0 auto;
                    justify-content: center;
                    align-items: center;
                    color: {{ block.settings.font-color }};
                    text-transform: uppercase;
                    font-size: {{ block.settings.font-size-headline }}px !important;
                    letter-spacing: 1.14px;
                }
                [data-slt010-class="slt010-countdown-content"]{
                    width: 100%;
                    height: auto;
                    margin: 0;
                    padding: 0;
                    display: flex;
                    flex: 0 0 auto;
                    justify-content: center;
                    align-items: center;
                }
                [data-slt010-class="slt010-countdown-msg"]{
                    margin-right: 3px;
                    display: flex;
                    flex: 0 0 auto;
                    justify-content: center;
                    align-items: center;
                    color: {{ block.settings.font-color }};
                    font-size: {{ block.settings.font-size }}px !important;
                }
                [data-slt010-class="slt010-countdown"]{
                    display: flex;
                    flex: 0 0 auto;
                    justify-content: center;
                    align-items: center;
                }
                [data-countdown-wrap="SLT010-CART-DRAWER-COUNTDOWN"]{
                    display: flex;
                    flex: 0 0 auto;
                    justify-content: center;
                    align-items: center;
                    color: {{ block.settings.font-color }};
                }
                [data-countdown-wrap="SLT010-CART-DRAWER-COUNTDOWN"] > div{
                    display: flex;
                    flex: 0 0 auto;
                }
                
                [data-slt010-class="slt010-cart-page-countdown"]{
                    width: 100%;
                    height: auto;
                    margin: 0;
                    padding: 0;
                    display: flex;
                    justify-content: center;
                }
                [data-slt010-class="slt010-cart-page-countdown"] [data-slt010-class="slt010-countdown-container"]{
                    flex: 0 0 100%;
                    width: 100%;
                    max-width: 1000px;
                }
                @media all and (max-width: 767px) { 
                    [data-slt010-class="slt010-countdown-title"]{
                        font-size: {{ block.settings.font-size-mobile-headline }}px !important;
                    }
                    [data-slt010-class="slt010-countdown-msg"]{
                        font-size: {{ block.settings.font-size-mobile }}px !important;
                    }
                }
                
            {%- when 'progress-bar' -%}
                :root{
                    --data-shipping-progress-bar-bg-color: {{ block.settings.bg-color }};
                    --data-shipping-progress-bar-progress-bar-bg: {{ block.settings.bar-bg-color }};
                    --data-shipping-progress-bar-progress-bar: {{ block.settings.bar-color }};
                    --data-shipping-progress-bar-progress-bar-complete: {{ block.settings.bar-color-complete }};
                    --data-shipping-progress-bar-font-color: {{ block.settings.font-color }};
                    --data-shipping-progress-bar-font-size: {{ block.settings.font-size }}px;
                    --data-shipping-progress-bar-border-color: #e1e1e1;
                }
                slt010-cart-drawer-progress-bar{
                    width: 100%;
                    margin: 0;
                    padding: 0;
                    display: flex;
                    flex: 0 0 auto;
                    flex-wrap: wrap;
                }
                [data-shipping-progress-bar-inner] {
                    width: 100%;
                    height: auto;
                    margin: 0;
                    padding: 10px;
                    background-color: var(--data-shipping-progress-bar-bg-color);
                    border: solid 1px var(--data-shipping-progress-bar-border-color);
                    display: flex;
                }
                [data-shipping-progress-bar-wrap] {
                    width: 100%;
                    height: auto;
                    margin: 0;
                    padding: 0;
                    display: flex;
                    flex: 0 0 100%;
                    flex-wrap: wrap;
                    justify-content: center;
                    align-items: center;
                }
                [data-shipping-progress-bar-txt-wrap]{
                    width: auto;
                    max-width: 100%;
                    height: auto;
                    margin: 0;
                    padding: 0 5px 0 0;
                    display: flex;
                    flex: 0 0 auto;
                    justify-content: center;
                    align-items: center;
                    order: {%- if block.settings.position == 'below' -%}1{%- else -%}2{%- endif -%};
                }
                [data-shipping-progress-bar-msg]{
                    color: var(--data-shipping-progress-bar-font-color);
                    text-align: center;
                    font-size: var(--data-shipping-progress-bar-font-size);
                }
                
                [data-shipping-progress-bar-bar-wrap]{
                    width: 100%;
                    height: 10px;
                    margin: 5px 10px;
                    padding: 0;
                    background-color: var(--data-shipping-progress-bar-progress-bar-bg);
                    border-radius: 10px;
                    display: flex;
                    flex: 0 0 100%;
                    justify-content: flex-start;
                    align-items: center;
                    overflow: hidden;
                    order: {%- if block.settings.position == 'below' -%}2{%- else -%}1{%- endif -%};
                }
                [data-shipping-progress-bar-bar]{
                    width: 0;
                    height: 10px;
                    margin: 0;
                    padding: 0;
                    background-color: var(--data-shipping-progress-bar-progress-bar);
                    border-radius: 10px;
                    display: flex !important;
                    transition-delay: 100ms;
                    transition-duration: 1000ms;
                    transition-property: width;
                    transition-timing-function: ease;
                }
                [data-shipping-progress-bar-bar].data-shipping-progress-bar-bar-complete{
                    background-color: var(--data-shipping-progress-bar-progress-bar-complete);
                }
                
                @media all and (max-width: 767px) {  
                    [data-shipping-progress-bar-bar-wrap]{
                        margin-top: 8px;
                    }
                }
                
            {%- when 'body' -%}
                slt010-cart-drawer-body{
                    width: 100%;
                    margin: 0;
                    padding: 0 15px;
                    display: flex;
                    flex: 1 1 100%;
                    flex-wrap: wrap;
                    align-content: flex-start;
                    overflow: auto;
                    scrollbar-width: thin;
                    scrollbar-color: rgba(0,0,0,1) rgba(0,0,0,.3);
                }
                slt010-cart-drawer-body::-webkit-scrollbar{
                    width: 5px;
                }
                slt010-cart-drawer-body::-webkit-scrollbar-track{
                    background-color: rgba(0,0,0,.3);
                }
                slt010-cart-drawer-body::-webkit-scrollbar-thumb{
                    background-color: rgba(0,0,0,1);
                }
                slt010-cart-drawer-body-list{
                    margin: 0;
                    padding: 0 5px;
                    display: flex;
                    flex: 0 0 100%;
                    flex-direction: column;
                }
                slt010-cart-drawer-body-list-item{
                    width: 100%;
                    margin: 0;
                    padding: 20px 0;
                    border-bottom: solid 1px #eee;
                    display: flex;
                    flex: 0 0 auto;
                }
                [data-slt010-class="slt010-cart-drawer-body-list-item-media"]{
                    width: 90px;
                    height: 90px;
                    margin: 0;
                    padding: 0;
                    display: flex;
                    flex: 0 0 90px;
                }
                [data-slt010-class="slt010-cart-drawer-body-list-item-picture"]{
                    width: 100%;
                    height: 0;
                    margin: 0;
                    padding: 100% 0 0;
                    display: flex;
                    flex: 0 0 100%;
                    position: relative;
                }
                [data-slt010-class="slt010-cart-drawer-body-list-item-image"]{
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                }
                slt010-cart-drawer-body-list-item-meta{
                    margin: 0 0 0 20px;
                    padding: 0;
                    display: flex;
                    flex: 1 1 100%;
                    flex-wrap: wrap;
                    align-content: flex-start;
                    position: relative;
                }
                [data-slt010-class="slt010-cart-drawer-body-list-item-title"]{
                    margin: 0;
                    padding: 0 30px 0 0;
                    display: flex;
                    flex: 0 0 100%;
                    align-items: center;
                    font-size: 14px;
                    font-weight: 700;
                    color: #535353;
                }
                [data-slt010-class="slt010-cart-drawer-body-list-item-variant-title"]{
                    margin: 0;
                    padding: 0;
                    display: flex;
                    flex: 0 0 100%;
                    align-items: center;
                    font-size: 12px;
                    font-weight: 400;
                    color: #535353;
                }
                [data-slt010-class="slt010-cart-drawer-body-list-item-discount-list"]{
                    margin: 0;
                    padding: 0;
                    display: flex;
                    flex: 0 0 100%;
                    align-items: center;
                    font-size: 12px;
                    font-weight: 400;
                    color: #44be70;
                }
                [data-slt010-class="slt010-discount"]{
                    color: #44be70;
                }
                [data-slt010-class="slt010-cart-drawer-body-list-item-remove-btn"]{
                    width: 15px;
                    min-width: auto;
                    height: 15px;
                    min-height: auto;
                    margin: 0;
                    padding: 0;
                    position: absolute;
                    top: 3px;
                    right: 0;
                    z-index: 1;
                    outline: none;
                    border: none;
                    box-shadow: none;
                    background: none;
                    cursor: pointer;
                    line-height: 20px;
                    color: #999;
                    font-size: 14px;
                    cursor: pointer;
                }
                [data-slt010-class="slt010-cart-drawer-body-list-item-remove-btn"] svg{
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                }
                [data-slt010-class="slt010-cart-drawer-body-list-item-qty-container"]{
                    margin: 5px 0 0;
                    padding: 0;
                    display: flex;
                    flex: 0 0 50%;
                    align-items: center;
                }
                [data-slt010-class="slt010-cart-drawer-body-list-item-qty-wrap"]{
                    border: solid 1px #e3e3e3;
                    display: flex;
                    flex: 0 0 auto;
                    align-items: center;
                }
                [data-slt010-class="slt010-cart-drawer-body-list-item-qty-wrap"] > button{
                    width: 36px;
                    height: 24px;
                    margin: 0;
                    padding: 0;
                    background-color: transparent;
                    border: 0;
                    display: flex;
                    flex: 0 0 36px;
                    align-items: center;
                    justify-content: center;
                    font-size: 16px;
                    font-weight: 700;
                    color: #232323;
                    cursor: pointer;
                }
                [data-slt010-class="slt010-cart-drawer-body-list-item-qty-wrap"] > input{
                    width: 36px;
                    height: 24px;
                    margin: 0;
                    padding: 0;
                    background-color: transparent;
                    border: solid 1px transparent;
                    border-left-color: #e3e3e3;
                    border-right-color: #e3e3e3;
                    display: flex;
                    flex: 0 0 36px;
                    align-items: center;
                    justify-content: center;
                    font-size: 12px;
                    font-weight: 700;
                    color: #232323;
                    text-align: center;
                }
                [data-slt010-class="slt010-cart-drawer-body-list-item-qty-wrap"] > input::-webkit-outer-spin-button,
                [data-slt010-class="slt010-cart-drawer-body-list-item-qty-wrap"] > input::-webkit-inner-spin-button{
                    -webkit-appearance: none;
                    margin: 0;
                }
                [data-slt010-class="slt010-cart-drawer-body-list-item-qty-wrap"] > input{
                    -moz-appearance: textfield;
                }
                [data-slt010-class="slt010-cart-drawer-body-list-item-price"]{
                    margin: 5px 0 0;
                    padding: 0;
                    display: flex;
                    flex: 0 0 50%;
                    justify-content: flex-end;
                    align-items: center;
                    font-size: 12px;
                    font-weight: 400;
                    color: #535353;
                }

                {%- if block.settings.active-upsell -%}
                    slt010-cart-drawer-upsell-block{
                        width: calc(100% + 30px);
                        margin: 0 -15px;
                        padding: 20px 25px;
                        background-color:{{ block.settings.bg-color }};
                        border-top: solid 1px #e3e3e3;
                        display: flex;
                        flex: 0 0 auto;
                        flex-wrap: wrap;
                    }
                    slt010-cart-drawer-upsell-block > h4{
                        margin: 0;
                        display: flex;
                        flex: 0 0 100%;
                        justify-content: center;
                        align-items: center;
                        font-size: {{ block.settings.font-size-headline }}px;
                    }
                    slt010-cart-drawer-upsell{
                        margin: 0;
                        padding: 0;
                        display: flex;
                        flex: 0 0 100%;
                        flex-wrap: wrap;
                    }
                    [data-slt010-class="slt010-cart-drawer-upsell-item"]{
                        padding: 20px;
                        display: flex;
                        flex: 0 0 calc(100% / {{ block.settings.desktop-pre-row }});
                        flex-direction: column;
                        align-items: center;
                    }
                    [data-slt010-class="slt010-cart-drawer-upsell-image-link"]{
                        width: 100%;
                        max-width: 113px;
                        max-height: 113px;
                        margin: 0 0 10px;
                        padding: 0;
                        display: flex;
                        flex: 0 0 auto;
                    }
                    [data-slt010-class="slt010-cart-drawer-upsell-picture"]{
                        width: 100%;
                        height: 0;
                        margin: 0;
                        padding: 100% 0 0;
                        display: flex;
                        position: relative;
                    }
                    [data-slt010-class="slt010-cart-drawer-upsell-image"]{
                        width: 100%;
                        height: 100%;
                        object-fit: cover;
                        position: absolute;
                        top: 50%;
                        left: 50%;
                        transform: translate(-50%, -50%);
                    }
                    [data-slt010-class="slt010-cart-drawer-upsell-meta"]{
                        width: 100%;
                        margin: 0;
                        padding: 0;
                        display: flex;
                        flex: 1 1 100%;
                        flex-direction: column;
                    }
                    [data-slt010-class="slt010-cart-drawer-upsell-title-link"]{
                        width: 100%;
                        margin: 0;
                        padding: 0;
                        display: flex;
                        flex: 1 1 100%;
                        justify-content: center;
                        align-items: flex-start;
                        text-align: center;
                        font-size: 14px;
                        line-height: 18px;
                        color: #535353;
                        text-decoration: none;
                    }
                    [data-slt010-class="slt010-cart-drawer-upsell-meta-price"]{
                        width: 100%;
                        margin: 0;
                        padding: 10px 0 0;
                        display: flex;
                        flex: 0 0 auto;
                        justify-content: center;
                        align-items: center;
                        font-size: 14px;
                        line-height: 18px;
                        color: #535353;
                    }
                    [data-slt010-class="slt010-cart-drawer-upsell-meta-form"]{
                        width: 100%;
                        margin: 0;
                        padding: 0;
                        display: flex;
                        flex: 0 0 auto;
                        flex-direction: column;
                        justify-content: center;
                        align-items: center;
                    }
                    [data-slt010-class="slt010-cart-drawer-upsell-meta-form-select"]{
                        width: 100%;
                        margin: 20px 0;
                        padding: 10px 15px;
                        background-color: #fff;
                        border: solid 1px #ccc;
                        border-radius: 5px;
                        display: flex;
                        flex: 0 0 auto;
                        justify-content: center;
                        align-items: center;
                        color: #232323;
                    }
                    [data-slt010-class="slt010-cart-drawer-upsell-meta-form-select"][data-slt010-visible="slt010-hidden"]{
                        visibility: hidden;
                    }
                    [data-slt010-class="slt010-cart-drawer-upsell-meta-form-btn"]{
                        width: 100%;
                        margin: 0 0 20px;
                        padding: 10px 15px;
                        background: #f7d6c5;
                        border: solid 2px #f7d6c5;
                        border-radius: 5px;
                        display: flex;
                        flex: 0 0 auto;
                        justify-content: center;
                        align-items: center;
                        color: #3f4759;
                        font-size: 16px;
                        cursor:pointer;
                    }
                    @media all and (max-width: 767px) {  
                        [data-slt010-class="slt010-cart-drawer-upsell-item"]{
                            flex: 0 0 calc(100% / {{ block.settings.mobile-pre-row }});
                        }
                    }
                {%- endif -%}
            
                slt010-cart-drawer-empty{
                    height: 100%;
                    margin: 0;
                    padding: 0;
                    display: flex;
                    flex: 1 1 100%;
                    flex-direction: column;
                    justify-content: center;
                    align-items: center;
                }
                @media all and (max-width: 767px) {  
                    slt010-cart-drawer{
                        width: 100vw;
                    }
                    [data-slt010-class="slt010-cart-drawer-body-list-item-price"]{
                        flex: 1 0 auto;
                    }
                }
                
            {%- when 'footer' -%}
                slt010-cart-drawer-footer{
                    width: 100%;
                    margin: 0;
                    padding: 20px;
                    border-top: solid 1px #e3e3e3;
                    display: flex;
                    flex: 0 0 auto;
                    flex-wrap: wrap;
                }
                slt010-cart-drawer-footer:empty{
                    display: none;
                }
                [data-slt010-class="slt010-cart-drawer-footer"]{
                    width: 100%;
                    margin: 0;
                    padding: 20px;
                    border-top: solid 1px #e3e3e3;
                    display: flex;
                    flex: 0 0 auto;
                    flex-wrap: wrap;
                }
                [data-slt010-class="slt010-cart-drawer-footer-subtotal"]{
                    display: flex;
                    flex: 0 0 100%;
                    justify-content: space-between;
                    align-items: center;
                }
                [data-slt010-class="slt010-cart-drawer-footer-subtotal-label"]{
                    display: flex;
                    flex: 0 0 auto;
                    align-items: center;
                    font-size: 13px;
                    font-weight: 700;
                    color: #232323;
                }
                [data-slt010-class="slt010-cart-drawer-footer-subtotal-amount"]{
                    display: flex;
                    flex: 0 0 auto;
                    align-items: center;
                    font-size: 13px;
                    font-weight: 700;
                    color: #232323;
                }
                [data-slt010-class="slt010-cart-drawer-footer-checkout-btn"]{
                    margin: 0;
                    padding: 10px 15px;
                    background-color: #f7d6c5;
                    border: solid 2px #f7d6c5;
                    border-radius: 5px;
                    display: flex;
                    flex: 100%;
                    justify-content: center;
                    align-items: center;
                    color: #3f4759;
                    font-size: 16px;
                    text-align: center;
                    text-transform: capitalize;
                }
                
            {%- when 'message' -%}
                slt010-cart-drawer-message{
                    width: 100%;
                    margin: 0;
                    padding: 5px 20px;
                    background-color: {{ block.settings.bg-color }};
                    display: flex;
                    flex: 0 0 auto;
                    justify-content: center;
                    align-items: center;
                    color: {{ block.settings.font-color }};
                    text-align: center;
                    font-size: {{ block.settings.font-size }}px;
                    line-height: {{ block.settings.line-height }}px;
                }
                
        {%- endcase -%}
    {%- endfor -%}
    
    slt010-cart-drawer-close-button{
        width: 30px;
        height: 30px;
        margin: 0;
        padding: 0;
        background-color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        position: absolute;
        top: 10px;
        right: 20px;
        font-size: 40px;
        line-height: .7;
        cursor: pointer;
    }
    slt010-cart-drawer-link-wrap{
        margin: 0;
