{%- comment -%} The Section is'section' is fed in as a variable {%- endcomment -%}
{% liquid
  if section.settings.theme_color_section_button_background != 'theme_default'
    assign bg_color = section.settings.theme_color_section_button_background
  endif
  if section.settings.theme_color_text_section_button_text != 'theme_default'
    assign text_color = section.settings.theme_color_text_section_button_text
  endif
  if section.settings.theme_color_section_button_background_hover != 'theme_default'
    assign bg_hover = section.settings.theme_color_section_button_background_hover
  endif
  if section.settings.theme_color_text_section_button_text_hover != 'theme_default'
    assign text_hover = section.settings.theme_color_text_section_button_text_hover
  endif
  if section.settings.theme_color_section_button_background_hover == 'theme_default' and section.settings.theme_color_text_section_button_text_hover == 'theme_default'
    assign default = 'default'
  endif
%}
button--{% if section.settings.button_type == 'secondary' %}secondary{% else %}primary{% endif %}
{{ bg_color }}
{{ text_color }}
{{ bg_hover }}
{{ text_hover }}
{{ default }}
