<script>
    {%- if cart.item_count > 0 -%}

    {%- else -%}
        function emptyCart(){
            const $empty = document.createElement('slt010-cart-drawer-empty');
            const $body = document.querySelector('slt010-cart-drawer-body');
            $empty.innerHTML = '<h4>{{ section.blocks['body'].settings.title-empty }}</h4><p>{{ section.blocks['body'].settings.content-empty }}</p>';
            $body.innerHTML = '';
            $body.appendChild($empty);
        }
        emptyCart();
    {%- endif -%}
</script>