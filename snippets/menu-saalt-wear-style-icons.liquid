WAKA-WAKA
{%- assign link_title = link_title | handleize -%}
{%- assign downcased_link_title = link_title | downcase | handleize -%}
{%- assign capitalized_link_title = link_title | capitalize | handleize -%}
{%- if include_spacer -%}
  <div class="menu-spacer">-</div>
{%- endif -%}
<div class="saalt-wear-styles_icons-wrapper">
  {%- if shop.metaobjects.saalt_wear_styles[link_title].style_svg -%}
    {%- assign found_title = link_title -%}
  {%- elsif shop.metaobjects.saalt_wear_styles[downcased_link_title].style_svg -%}
    {%- assign found_title = downcased_link_title -%}
  {%- elsif shop.metaobjects.saalt_wear_styles[capitalized_link_title].style_svg -%}
    {%- assign found_title = capitalized_link_title -%}
  {%- endif -%}
  <div class="saalt-wear-styles_inner-icon-wrapper">
    <div class="style-icon">
      {{ shop.metaobjects.saalt_wear_styles[found_title].style_svg }}
    </div>
  </div>
</div>
