{{ 'ugc-rating.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign max_rating = 5
-%}

<div
  class="ugc-rating"
  role="img"
  aria-label="{{ 'accessibility.star_reviews_info' | t: rating_value: block.settings.rating, rating_max: max_rating }}"
>
  {%- for i in (1..max_rating) -%}
    <span
      aria-hidden="true"
      class="ugc-rating-star{% if i <= block.settings.rating %} filled{% endif %}"
    ></span>
  {%- endfor -%}
</div>
