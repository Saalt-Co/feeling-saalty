{%- for block in section.blocks -%}
    {%- case block.type -%}
        {%- when 'header' -%}
            {%- render 'cro-drawer-cart-layout-header', block: block -%}
        {%- when 'countdown' -%}
            {%- render 'cro-drawer-cart-layout-countdown' -%}
        {%- when 'progress-bar' -%}
            {%- render 'cro-drawer-cart-layout-progress-bar' -%}
        {%- when 'body' -%}
            {%- render 'cro-drawer-cart-layout-body' -%}
        {%- when 'footer' -%}
            {%- render 'cro-drawer-cart-layout-footer' -%}
    {%- endcase -%}
{%- endfor -%}