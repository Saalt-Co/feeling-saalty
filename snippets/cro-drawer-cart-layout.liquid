{%- for block in section.blocks -%}
    {%- case block.type -%}
        {%- when 'header' -%}
            <slt010-cart-drawer-header>{{ block.settings.title }}</slt010-cart-drawer-header>
        {%- when 'countdown' -%}
            <slt010-cart-drawer-countdown></slt010-cart-drawer-countdown>
        {%- when 'progress-bar' -%}
            <slt010-cart-drawer-progress-bar></slt010-cart-drawer-progress-bar>
        {%- when 'body' -%}
            <slt010-cart-drawer-body></slt010-cart-drawer-body>
        {%- when 'footer' -%}
            <slt010-cart-drawer-footer></slt010-cart-drawer-footer>
        {%- when 'message' -%}
            <slt010-cart-drawer-message>{{ block.settings.msg-banner }}</slt010-cart-drawer-message>
    {%- endcase -%}
{%- endfor -%}