{% style %}
  .size-chart-modal {
    display: none;
    position: fixed;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: rgba(0, 0, 0, 0.5);
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    padding: 1rem;
    opacity: 0;
    z-index: 3000000000;
  }
  .size-chart-modal-inner-wrapper {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    flex-direction: column;
    position: relative;
    max-width: 100%;
    height: 100%;
  }
  @media screen and (min-width: 750px) {
    .size-chart-modal-inner-wrapper {
      max-width: 750px;
      max-height: 80%;
    }
  }
  .size-chart-modal .size-chart-close-button-wrapper {
    display: block;
    width: 100%;
    min-width: 100%;
    text-align: right;
    padding: 0 0 1rem 0;
  }
  .size-chart-modal,
  .size-chart-modal .size-chart-close-button-wrapper .size-chart-close-button {
    cursor: pointer;
  }
  .size-chart-modal .size-chart-close-button-wrapper .size-chart-close-button {
    display: inline-block;
    border: none;
    border-radius: 5rem;
    box-shadow: 2px 2px 3px 0px rgba(0, 0, 0, 0.25);
    font-size: 2rem;
    font-weight: 200;
    line-height: 1;
    padding: 0.5rem 1rem;
    align-items: center;
    transition: all ease-in-out 0.1s;
  }
  .size-chart-modal .size-chart-close-button-wrapper .size-chart-close-button:hover {
    background: #fff;
  }
  .size-chart-modal .size-chart-wrapper {
    display: flex;
    background: rgba(var(--color-base-background-1), 1);
    align-items: flex-start;
    max-width: 100%;
    height: auto;
    overflow: auto;
  }
  .size-chart-modal .size-chart-wrapper .size-chart-content {
    display: block;
    width: 100%;
    height: auto;
    max-width: 500px;
    cursor: initial;
  }
  .reveal-modal {
    display: flex;
    animation: 0.1s ease-in forwards RevealModal;
  }
  .hide-modal {
    animation: 0.1s ease-in forwards HideModal;
  }
  @keyframes RevealModal {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
  @keyframes HideModal {
    0% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }

  .missing-content-message {
    display: block;
    background: #fff;
    height: auto;
    padding: 1rem;
    text-align: center;
    max-width: 600px;
    cursor: initial;
  }

  .missing-content-message p {
    display: block;
    padding: 0 1rem;
  }

  .missing-content-message p a {
    color: inherit;
  }

  .missing-content-message p a:hover {
    color: rgb(var(--color-link));
  }
{% endstyle %}
<div class="size-chart-modal">
  <div class="size-chart-modal-inner-wrapper">
    <div class="size-chart-close-button-wrapper">
      <button class="size-chart-close-button">&times;</button>
    </div>
    <div class="size-chart-wrapper">
      {% render 'saalt-main-size-chart' %}
    </div>
  </div>
</div>
<script>
  const handleClosePopup = (e) => {
    const modal = document.querySelector('.size-chart-modal');
    if (e.target.closest('.size-chart-wrapper')) return;
    modal.classList.add('hide-modal');
    const timer = setTimeout(() => {
      modal.classList.remove('hide-modal');
      modal.classList.remove('reveal-modal');
      clearTimeout(timer);
    }, 500);
  };
  const modal = document.querySelector('.size-chart-modal');
  modal.addEventListener('click', handleClosePopup, false);
</script>
