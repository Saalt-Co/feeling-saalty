{% style %}
  button.size-chart-button {
    display: inline-block;
    background: none;
    border: transparent;
    color: inherit;
    font-family: inherit;
    font-size: 1.3rem;
    line-height: calc(1 + 0.5 / var(--font-body-scale));
    letter-spacing: 0.04rem;
    cursor: pointer;
    text-decoration: underline;
  }
  button.size-chart-button:hover {
    color: rgb(var(--color-link));
  }
  legend.has-size-chart {
    display: flex;
    width: 100%;
    justify-content: space-between;
  }
{% endstyle %}

<script>
  const sizeChartBtn = document.querySelector('.size-chart-button');
  const handleSizeChartBtnClick = (e) => {
    if (!a11yClick(e)) return;
    const modal = document.querySelector('.size-chart-modal');
    modal.classList.add('reveal-modal');
    document.querySelector('.size-chart-close-button').focus();
  };
  sizeChartBtn.addEventListener('click', handleSizeChartBtnClick, false);
</script>
