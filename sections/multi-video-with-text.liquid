{% schema %}
{
  "name": "Custom Video Section",
  "settings": [
    {
      "type": "text",
      "id": "video_1_url",
      "label": "Video 1 URL"
    },
    {
      "type": "text",
      "id": "video_2_url",
      "label": "Video 2 URL"
    },
    // Add more video URLs as needed
    {
      "type": "text",
      "id": "text_above",
      "label": "Text Above Videos"
    },
    {
      "type": "text",
      "id": "text_below",
      "label": "Text Below Videos"
    }
  ]
}
{% endschema %}

<div class="custom-video-section">
  {% if section.settings.text_above != blank %}
    <div class="text-above">{{ section.settings.text_above }}</div>
  {% endif %}

  <div class="videos-container" style="display: flex; justify-content: space-around; flex-wrap: wrap;">
    {% if section.settings.video_1_url != blank %}
      <video controls style="max-width: 100%; width: auto; height: auto;">
        <source src="{{ section.settings.video_1_url }}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    {% endif %}
    
    {% if section.settings.video_2_url != blank %}
      <video controls style="max-width: 100%; width: auto; height: auto;">
        <source src="{{ section.settings.video_2_url }}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    {% endif %}
    
    <!-- Add more video tags as needed based on your schema -->
  </div>

  {% if section.settings.text_below != blank %}
    <div class="text-below">{{ section.settings.text_below }}</div>
  {% endif %}
</div>
