<style>
  #image-banner-{{ section.id }}.image-banner-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }

  #image-banner-{{ section.id }} .image-banner {
    position: relative;
    background: url({{ section.settings.hero_image | image_url: width: 2048 }}) no-repeat 0 0;
    background-size: cover;
    background-position: center;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #image-banner-{{ section.id }} .image-banner>.image-banner-container {
    display: grid;
    align-items: center;
    justify-content: {{ section.settings.box_alignment }};
    position: relative;
    max-width: 1220px;
    margin: 0 auto;
    padding: 100px 10px 100px 10px;
    z-index: 2;
  }

  #image-banner-{{ section.id }} .image-banner>.image-banner-cover {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, calc({{section.settings.cover_opacity}} / 100));
  }

  .image-banner-content {
    padding: 0 25px 0 25px;
    max-width: 60%;
  }

  @media only screen and (max-width: 800px) {
    .image-banner-content {
      padding: 0 10px 0 10px;
      max-width: calc(100% - 20px);
    }
  }

  #image-banner-{{ section.id }} .image-banner h2 {
    font-size: 6rem;
    line-height: 6.5rem;
    font-weight: bold;
    margin: 0 0 25px 0;
    padding: 0;
    color: {{section.settings.text_color}};
    text-align: {{section.settings.text_alignment}};
  }

  #image-banner-{{ section.id }} .image-banner p {
    font-size: 2.0rem;
    line-height: 2.5rem;
    margin: 0 0 25px 0;
    padding: 0;
    color: {{section.settings.text_color}};
    text-align: {{section.settings.text_alignment}};
  }

  .image-banner p:last-child {
    margin-bottom: 0;
  }

  #image-banner-{{ section.id }} .image-banner a.image-banner-cta {
    display: inline-block;
    padding: 15px 40px;
    background-color: {{section.settings.button_background_color}};
    border-radius: {{ section.settings.button_corner_radius }}px;
    color: {{section.settings.button_text_color}};
    text-decoration: none;
    cursor: pointer;
    font-weight: bold;
    text-shadow: none;
    transition: .25s all;
  }

  .image-banner a.image-banner-cta:hover {
    transform: translateY(-2px);
  }
</style>

<div id="image-banner-{{ section.id }}" class="image-banner-wrap">
  <div class="image-banner">
    <div class="image-banner-cover"></div>
    <div class="image-banner-container">
      <div class="image-banner-content">
        <h2>{{ section.settings.headline }}</h2>
        <p>{{ section.settings.content }}</p>
        <p><a class="image-banner-cta" href="{{ section.settings.cta_link }}">{{ section.settings.cta }}</a></p>
      </div>
    </div>
  </div>
</div>

