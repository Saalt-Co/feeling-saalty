<!-- CRO Cart DRAWER -->
{%- unless template contains 'cart' -%}
    <!-- CRO NOT Cart PAGE -->
    {%- liquid 
      assign sessionTag = 'cro-drawer-cart-data'  
    -%}
    <script>
      window.sessionStorage.setItem('{{ sessionTag }}', JSON.stringify({{ cart | json }}));
    </script>
    <slt010-cart-drawer-block id="{{ section.id }}-block" data-opened="false">
        <slt010-cart-drawer-container>
            <slt010-cart-drawer>
              {%- render 'cro-drawer-cart', section: section -%}
            </slt010-cart-drawer>
        </slt010-cart-drawer-container>
    </slt010-cart-drawer-block>
    {%- render 'cro-drawer-cart-styles', section: section -%}
    {%- render 'cro-drawer-cart-custom-html-elements' -%}
{%- endunless -%}

{% schema %}
  {
    "name": "Cart Drawer",
    "settings": [
    ],
    "blocks":[
      {
        "type":"header",
        "name": "Header",
        "limit": 1,
        "settings":[
          {
            "type":"text",
            "id":"title",
            "label":"Title",
            "default":"YOUR CART"
          }
        ]
      },
      {
        "type":"progress-bar",
        "name": "Progress Bar",
        "limit": 1,
        "settings":[]
      },
      {
        "type":"countdown",
        "name": "Countdown",
        "limit": 1,
        "settings":[]
      },
      {
        "type":"body",
        "name": "Body",
        "limit": 1,
        "settings":[]
      },
      {
        "type":"footer",
        "name": "Footer",
        "limit": 1,
        "settings":[]
      }
    ],
    "presets": [
      {
        "category": "Footer",
        "name": "CRO Cart Drawer",
        "settings":{},
        "blocks":[
          {
            "type":"header",
            "settings": {
                "title": "YOUR CART"
            }
          },
          {
            "type":"progress-bar"
          },
          {
            "type":"countdown"
          },
          {
            "type":"body"
          },
          {
            "type":"footer"
          }
        ]
      }
    ],
    "enabled_on": {
      "groups": ["footer"]
    }
  }
{% endschema %}