    border-color: {{ section.settings.button_color_hover_focus }};
    color: {{ section.settings.button_text_hover_focus }};
  }
  #section-{{ section.id }} .section-inner .text-wrapper .button-wrapper {
    text-align: {{ section.settings.mobile_text_alignment }};
  }
  #section-{{ section.id }} .section-inner .text-wrapper > *:last-child {
    margin-bottom: 0;
  }
  #section-{{ section.id }} .section-inner .tiles-wrapper {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 2.5rem;
    width: 100%;
    max-width: 1080px;
    margin: 0 auto;
  }
