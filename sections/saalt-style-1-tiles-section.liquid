  }
  #section-{{ section.id }} .section-inner .tiles-wrapper .tile {
    position: relative;
    width: 100%;
    overflow: hidden;
  }
  #section-{{ section.id }} .content-wrapper .tile-link {
    display: flex;
    justify-content: center;
    align-items: center;
    aspect-ratio: 1/1;
    cursor: pointer;
    transition: opacity ease-in-out .1s;
    overflow: hidden;
  }
  #section-{{ section.id }} .content-wrapper .tile-link .image-wrapper, #section-{{ section.id }} .content-wrapper .tile-link .image-wrapper > * {
    display: block;
