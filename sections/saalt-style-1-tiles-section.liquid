    height: auto;
  }
  #section-{{ section.id }} .section-inner .text-wrapper .button-wrapper {
    display: block;
    width: 100%;
    text-align: center;
  }
  #section-{{ section.id }} .section-inner .text-wrapper .button-group {
    display: flex;
    justify-content: center;
