{%- liquid
  if section.settings.mobile_text_position == 'below'
    assign mobile_flex_direction = 'column-reverse'
  else
    assign mobile_flex_direction = 'column'
  endif
-%}
{%- case section.settings.title_font_size -%}
  {%- when 'x-large' -%}
    {%- capture title_css -%}
      font-size: 50px;
      font-weight: 600;
      line-height: 55px;
    {%- endcapture -%}
  {%- when 'large' -%}
    {%- capture title_css -%}
      font-size: 48px;
      font-weight: 600;
      line-height: 55px;
    {%- endcapture -%}
  {%- when 'medium' -%}
    {%- capture title_css -%}
      font-size: 40px;
      font-weight: 600;
      line-height: 44px;
    {%- endcapture -%}
  {%- else -%}
    {%- capture title_css -%}
    font-size: 30px;
    font-weight: 600;
    line-height: 34px;
  {%- endcapture -%}
{%- endcase -%}
{%- case section.settings.content_font_size -%}
  {%- when 'x-large' -%}
    {%- capture content_css -%}
      font-size: 30px;
      font-style: normal;
      font-weight: 400;
      line-height: 45px;
      letter-spacing: 0em;
    {%- endcapture -%}
  {%- when 'large' -%}
    {%- capture content_css -%}
      font-size: 25px;
      font-weight: 400;
      line-height: 41.25px;
    {%- endcapture -%}
  {%- when 'medium' -%}
    {%- capture content_css -%}
      font-size: 18px;
      font-weight: 400;
      line-height: 27px;
    {%- endcapture -%}
  {%- else -%}
    {%- capture content_css -%}
    font-size: 16px;
    font-weight: 400;
    line-height: 24px;
  {%- endcapture -%}
{%- endcase -%}

{%- assign block_count = section.blocks | size -%}
{%- assign all_icons = '' -%}
{%- assign tiles_code = '' -%}
<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" class="section-image-with-text">
  <div
    {% if section.settings.section_id != blank %}
      id="{{ section.settings.section_id | handleize }}"
    {% endif -%}
    class="section-inner"
  >
    <div class="text-wrapper">
      {%- if block_count > 0 -%}
        {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'section_title' -%}
              {%- if block.settings.title != blank -%}
                <h{{ block.settings.heading_tag }} class="section-title">
                  {{- block.settings.title -}}
                </h{{ block.settings.heading_tag }}>
              {%- endif -%}
            {%- when 'section_content' -%}
              {%- if block.settings.text_content != blank -%}
                <div class="section-content">{{ block.settings.text_content }}</div>
              {%- endif -%}
            {%- when 'section_buttons_group' -%}
              {%- for block in section.blocks -%}
                {%- case block.type -%}
                  {%- when 'section_button' -%}
                    {%- if block.settings.button_text != blank -%}
                      {%- capture button_code -%}                      
                        <a href="{{ block.settings.button_url }}" class="button{% if block.settings.button_style == "alt" %} alt{% endif %}">{{ block.settings.button_text }}</a>
                        {%- endcapture -%}
                      {%- assign buttons_code = buttons_code | append: button_code -%}
                    {%- endif -%}
                {%- endcase -%}
              {%- endfor -%}
              {% capture buttons_group_css %}
              @media screen and (min-width: 750px) {
                #section-{{ section.id }} .section-inner .text-wrapper .button-group {
                  gap: {{ block.settings.desktop_buttons_group_gap }};
                  justify-content: {{ block.settings.desktop_button_group_alignment }};
                }
                #section-{{ section.id }} .section-inner .text-wrapper .button-group .button {
                  width: auto;
                }
              }
            {% endcapture %}
              <div class="button-group">
                {{ buttons_code }}
              </div>
            {%- when 'section_tiles_group' -%}
              {%- for block in section.blocks -%}
                {%- case block.type -%}
                  {% when 'saalt_style_1_tile' %}
                    {%- capture tile -%}{% render "saalt-style-1-tile", block: block %}{%- endcapture -%}
                    {%- assign tiles_code = tiles_code | append: tile -%}
                {%- endcase -%}
              {%- endfor -%}
              <div class="tiles-wrapper">
                {{ tiles_code }}
              </div>
              {%- capture tiles_wrapper_css -%}
              #section-{{ section.id }} .section-inner .tiles-wrapper .tile .content-wrapper .tile-text-wrapper .tile-title, #section-{{ section.id }} .section-inner .tiles-wrapper .tile .content-wrapper .tile-text-wrapper .tile-content {
                color: {{ block.settings.mobile_text_color }};
                width: 100%;
                text-align: {{ block.settings.tile_mobile_text_alignment }};
              }
              @media screen and (min-width: 750px) {
                #section-{{ section.id }} .section-inner .tiles-wrapper .tile .content-wrapper .tile-text-wrapper {
                  display: flex;
                  position: absolute;
                  flex-direction: column;
                  justify-content: {{ block.settings.desktop_text_placement }};
                  align-items: center;
                  width: 100%;
                  height: 100%;
                  margin: 0 auto 3rem;
                  padding: 1rem;
                  top: 50%;
                  pointer-events: none;
                  transform: translateY(-50%);
                  transition: opacity ease-in-out .1s;
                }
                #section-{{ section.id }} .section-inner .tiles-wrapper .tile .content-wrapper .tile-text-wrapper .tile-title, #section-{{ section.id }} .section-inner .tiles-wrapper .tile .content-wrapper .tile-text-wrapper .tile-content {
                  color: {{ block.settings.desktop_text_color }};
                }
                #section-{{ section.id }} .section-inner .tiles-wrapper .tile .tile-link:hover + .tile-text-wrapper, #section-{{ section.id }} .section-inner .tiles-wrapper .tile .tile-link:focus + .tile-text-wrapper {
                  top: 0;
                  transform: translateY(0);
                  justify-content: {{ block.settings.desktop_text_hover_placement }};
                }
                #section-{{ section.id }} .section-inner .tiles-wrapper .tile .content-wrapper .tile-text-wrapper .tile-title, #section-{{ section.id }} .section-inner .tiles-wrapper .tile .content-wrapper .tile-text-wrapper .tile-content {
                  text-align: {{ block.settings.tile_desktop_text_alignment }};
                }
                #section-{{ section.id }} .section-inner .tiles-wrapper .tile .content-wrapper .tile-link:hover + .tile-text-wrapper > .tile-title, #section-{{ section.id }} .section-inner .tiles-wrapper .tile .content-wrapper .tile-link:focus + .tile-text-wrapper > .tile-title, #section-{{ section.id }} .section-inner .tiles-wrapper .tile .content-wrapper .tile-link:hover + .tile-text-wrapper > .tile-content, #section-{{ section.id }} .section-inner .tiles-wrapper .tile .content-wrapper .tile-link:focus + .tile-text-wrapper > .tile-content {
                  color: {{ block.settings.desktop_text_hover_focus_color }};
                  align-content: {{ block.settings.desktop_text_hover_placement }};
                  text-align: {{ block.settings.tile_desktop_text_alignment_hover_focus }};
                }
              }
              @media screen and (min-width: 900px) {
                #section-{{ section.id }} .section-inner .tiles-wrapper .tile .content-wrapper .tile-text-wrapper {
                  padding: 3rem;
                }
              }
            {%- endcapture -%}
            {%- when 'section_icon_group' -%}
              {%- for block in section.blocks -%}
                {%- case block.type -%}
                  {%- when 'section_icon_with_text' -%}
                    {%- capture icon_code -%}{% render "saalt-svg-icon", icon_svg: block.settings.icon_svg, icon_text: block.settings.icon_text %}{%- endcapture -%}
                    {%- assign all_icons = all_icons | append: icon_code -%}
                {%- endcase -%}
              {%- endfor -%}
              {% style %}
                #section-{{ section.id }} .icons-wrapper {
                  justify-content: {{ block.settings.mobile_icon_alignment }};
                  gap: {{ block.settings.mobile_icon_group_gap }};
                  {%- if block.settings.use_max_icon_group_width -%}
                  max-width: {{ block.settings.icon_group_max_width }};
                  margin: 0 auto 3rem;
                  {%- endif -%}
                }
                #section-{{ section.id }} .icons-wrapper .icon-wrapper .icon-svg-wrapper svg {
                  fill: {{ block.settings.icon_color }};
                }
                #section-{{ section.id }} .icons-wrapper .icon-wrapper .icon-text, #section-{{ section.id }} .icons-wrapper .icon-wrapper .icon-text > * {
                  color: {{ block.settings.icon_color }};
                  text-align: center;
                }
                #section-{{ section.id }} .icons-wrapper .icon-wrapper {
                  min-width: {{ block.settings.mobile_icon_min_width }};
                  max-width: {{ block.settings.mobile_icon_wrapper_max_width }};
                }
                #section-{{ section.id }} .icons-wrapper .icon-wrapper .icon-svg-wrapper {
                  max-width: {{ block.settings.mobile_icon_max_width }};
                  min-height: {{ block.settings.mobile_icon_height }};
                  max-height: {{ block.settings.mobile_icon_height }};
                }
                #section-{{ section.id }} .icons-wrapper .icon-wrapper .icon-text, #section-{{ section.id }} .icons-wrapper .icon-wrapper .icon-text > * {
                  font-size: {{ block.settings.mobile_icon_text_size }};
                }
                @media screen and (min-width: 750px) {
                  #section-{{ section.id }} .icons-wrapper {
                    justify-content: {{ block.settings.desktop_icon_alignment }};
                    gap: {{ block.settings.desktop_icon_group_gap }};
                    {%- if block.settings.use_max_icon_group_width -%}
                    max-width: {{ block.settings.icon_group_max_width }};
                    margin: 0 auto 3rem;
                    {%- endif -%}
                  }
                  #section-{{ section.id }} .icons-wrapper .icon-wrapper {
                    min-width: {{ block.settings.desktop_icon_min_width }};
                    max-width: {{ block.settings.desktop_icon_wrapper_max_width }};
                  }
                  #section-{{ section.id }} .icons-wrapper .icon-wrapper .icon-svg-wrapper {
                    max-width: {{ block.settings.desktop_icon_max_width }};
                    min-height: {{ block.settings.desktop_icon_height }};
                    max-height: {{ block.settings.desktop_icon_height }};
                  }
                  #section-{{ section.id }} .icons-wrapper .icon-wrapper .icon-text, #section-{{ section.id }} .icons-wrapper .icon-wrapper .icon-text > * {
                    font-size: {{ block.settings.desktop_icon_text_size }};
                  }
                }
              {% endstyle %}
              <ul class="icons-wrapper">
                {{ all_icons }}
              </ul>
              {% style %}
                #section-{{ section.id }} .icons-wrapper {
                  gap: {{ block.settings.icon_group_gap }};
                }
                @media screen and (min-width: 750px) {
                  #section-{{ section.id }} .icons-wrapper {
                    justify-content: {{ block.settings.desktop_icon_alignment }};
                    {%- if block.settings.use_max_icon_group_width -%}
                    max-width: {{ block.settings.icon_group_max_width }};
                    margin: 0 auto 3rem;
                    {%- endif -%}
                  }
                }
                #section-{{ section.id }} .icons-wrapper .icon-wrapper {
                  min-width: {{ block.settings.desktop_icon_min_width }};
                  max-width: {{ block.settings.desktop_icon_wrapper_max_width }};
                }
                #section-{{ section.id }} .icons-wrapper .icon-wrapper .icon-svg-wrapper {
                  max-width: {{ block.settings.desktop_icon_max_width }};
                  min-height: {{ block.settings.desktop_icon_height }};
                  max-height: {{ block.settings.desktop_icon_height }};
                }
                #section-{{ section.id }} .icons-wrapper .icon-wrapper .icon-svg-wrapper svg {
                  fill: {{ block.settings.icon_color }};
                }
                #section-{{ section.id }} .icons-wrapper .icon-wrapper .icon-text {
                  color: {{ block.settings.icon_color }};
                  font-size: {{ block.settings.icon_text_size }};
                  text-align: center;
                }
              {% endstyle %}
            {%- when 'saalt_contact_links' -%}
              {% render 'saalt-contact-links', block: block %}
            {%- when 'custom_liquid_code' -%}
              {{ block.settings.liquid_code }}
          {% endcase %}
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</section>

