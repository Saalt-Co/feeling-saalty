{%- liquid
  if section.settings.mobile_text_position == 'above'
    assign mobile_flex_direction = 'column-reverse'
  else
    assign mobile_flex_direction = 'column'
  endif
-%}
{%- case section.settings.title_font_size -%}
  {%- when 'x-large' -%}
    {%- capture title_css -%}
      font-size: 50px;
      font-weight: 600;
      line-height: 55px;
    {%- endcapture -%}
  {%- when 'large' -%}
    {%- capture title_css -%}
      font-size: 48px;
      font-weight: 600;
      line-height: 55px;
    {%- endcapture -%}
  {%- when 'medium' -%}
    {%- capture title_css -%}
      font-size: 40px;
      font-weight: 600;
      line-height: 44px;
    {%- endcapture -%}
  {%- else -%}
    {%- capture title_css -%}
    font-size: 30px;
    font-weight: 600;
    line-height: 34px;
  {%- endcapture -%}
{%- endcase -%}
{%- case section.settings.content_font_size -%}
  {%- when 'x-large' -%}
    {%- capture content_css -%}
      font-size: 30px;
      font-style: normal;
      font-weight: 400;
      line-height: 45px;
      letter-spacing: 0em;
    {%- endcapture -%}
  {%- when 'large' -%}
    {%- capture content_css -%}
      font-size: 25px;
      font-weight: 400;
      line-height: 41.25px;
    {%- endcapture -%}
  {%- when 'medium' -%}
    {%- capture content_css -%}
      font-size: 18px;
      font-weight: 400;
      line-height: 27px;
    {%- endcapture -%}
  {%- else -%}
    {%- capture content_css -%}
    font-size: 16px;
    font-weight: 400;
    line-height: 24px;
  {%- endcapture -%}
{%- endcase -%}
<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" class="section-image-with-text">
  <div
    {% if section.settings.section_id != blank %}
      id="{{ section.settings.section_id | handleize }}"
    {% endif -%}
    class="section-inner{% if section.settings.theme_color_background != 'theme_default' %} {{ section.settings.theme_color_background }}{% endif %}{% if section.settings.theme_color_text != 'theme_default' %} {{ section.settings.theme_color_text }} svg-color-fill{% endif %}"
  >
    {%- case section.settings.media_type -%}
      {%- when 'video' -%}
        {%- render 'saalt-video-for-media-section', video_obj: section.settings.video, is_bg_vid: true -%}
      {%- when 'image' -%}
        {%- render 'saalt-image-for-media-section', section: section, is_bg_img: true, device: 'desktop' -%}
        {%- render 'saalt-image-for-media-section', section: section, is_bg_img: true, device: 'mobile' -%}
    {%- endcase -%}
    {%- render 'saalt-img-vid-text-style-1', section: section -%}
  </div>
</section>

{%- style -%}
  #section-{{ section.id }} .section-inner {
    display: flex;
    position: relative;
    flex-direction: {{ mobile_flex_direction }};
    justify-content: center;
    align-items: center;
    text-align: center;
    overflow: hidden;
  }
  #section-{{ section.id }} .media-wrapper, #section-{{ section.id }} .media-wrapper img, #section-{{ section.id }} .media-wrapper video {
    display: block;
    width: 100%;
    height: auto;
  }
  #section-{{ section.id }} .media-wrapper.desktop {
    display: none;
    visibility: hidden;
  }
  #section-{{ section.id }} .media-wrapper video {
    cursor: pointer;
  }
  #section-{{ section.id }} .text-wrapper {
    width: 100%;
    text-align: {{ section.settings.mobile_text_alignment }};
    padding: 4rem 2rem;
  }
  #section-{{ section.id }} .text-wrapper > * {
    margin-bottom: 3rem;
  }
  #section-{{ section.id }} .text-wrapper .section-title, #section-{{ section.id }} .text-wrapper .section-content, #section-{{ section.id }} .text-wrapper .section-content > p {
    width: 100%;
  }
  #section-{{ section.id }} .text-wrapper .section-title {
    {{ title_css }}
  }
  #section-{{ section.id }} .text-wrapper .section-content {
    {{ content_css }}
  }
  #section-{{ section.id }} .text-wrapper .contact-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    gap: 4rem;
  }
  #section-{{ section.id }} .text-wrapper .contact-wrapper .contact {
    flex-direction: column;
    font-size: 2rem;
    gap: 1rem;
  }
  #section-{{ section.id }} .text-wrapper .contact-wrapper .contact, #section-{{ section.id }} .text-wrapper .contact-wrapper .contact .contact-image {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  #section-{{ section.id }} .text-wrapper .contact-wrapper .contact .contact-image {
    height: 8rem;
  }
  #section-{{ section.id }} .text-wrapper .contact-wrapper .contact-content {
    font-size: clamp(1.75rem, 1.5vw, 2.25rem);
    line-height: 1.25;
    text-align: left;
    text-decoration: underline;
    text-underline-offset: 4px;
  }
  #section-{{ section.id }} .text-wrapper .contact-wrapper .contact .contact-image svg {
    height: 100%;
  }
  #section-{{ section.id }} .icons-wrapper, #section-{{ section.id }} .icons-wrapper .icon-wrapper, #section-{{ section.id }} .icons-wrapper .icon-wrapper .icon-svg-wrapper {
    display: flex;
    width: 100%;
  }
  #section-{{ section.id }} .icons-wrapper {
    justify-content: center;
    align-items: flex-start;
    flex-wrap: wrap;
    padding-left: 0;
  }
  #section-{{ section.id }} .icons-wrapper .icon-wrapper {
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    gap: 1rem;
    flex: 1 1 0;
    overflow: hidden;
  }
  #section-{{ section.id }} .icons-wrapper .icon-wrapper .icon-svg-wrapper svg {
    width: 100%;
    height: auto;
  }

  {%- render 'saalt-custom-section-button-css', section: section -%}

  #section-{{ section.id }} .section-inner .text-wrapper .button-wrapper {
    text-align: {{ section.settings.mobile_text_alignment }};
  }
  #section-{{ section.id }} .section-inner .text-wrapper > *:last-child {
    margin-bottom: 0;
  }
  @media screen and (min-width: 420px) {
    #section-{{ section.id }} .text-wrapper .contact-wrapper .contact {
      flex-direction: row;
      justify-content: center;
      align-items: center;
    }
  }
  @media screen and (min-width: 750px) {
    #section-{{ section.id }} .section-inner {
      flex-direction: row;
      justify-content: {{ section.settings.desktop_text_position }};
    }
    {%- if section.settings.use_max_media_width -%}
    #section-{{ section.id }} .media-wrapper {
      max-width: {{ section.settings.max_media_width }};
      margin: 0 auto;
    }
    {%- endif -%}
    #section-{{ section.id }} .media-wrapper.mobile {
      display: none;
      visibility: hidden;
    }
    #section-{{ section.id }} .media-wrapper.desktop {
      display: block;
      visibility: visible;
    }
    #section-{{ section.id }} .text-wrapper {
      display: flex;
      position: absolute;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      padding: 4rem;
      text-align: {{ section.settings.desktop_text_alignment }};
      {%- if section.settings.use_max_text_width -%}
      max-width: calc({{ section.settings.max_width }} + 8rem);
      {%- endif -%}
    }
    #section-{{ section.id }} .text-wrapper .contact-wrapper {
      width: 100%;
      gap: 4rem;
      {%- if section.settings.desktop_text_alignment == "left" -%}
      justify-content: flex-start;
      {%- elsif section.settings.desktop_text_alignment == "right" -%}
      justify-content: flex-end;
      {%- endif -%};
    }
    #section-{{ section.id }} .text-wrapper .contact-wrapper .contact .contact-image {
      height: auto;
    }
  {%- if section.settings.section_padding != "default" -%}
    {%- case section.settings.section_padding -%}
      {%- when "remove_top" -%}
        {%- assign special_section_padding = "padding-top: 0;" -%}
      {%- when "remove_bottom" -%}
        {%- assign special_section_padding = "padding-bottom: 0;" -%}
      {%- when "remove_both" -%}
        {%- assign special_section_padding = "padding-top: 0; padding-bottom: 0;" -%}
    {%- endcase -%}
    #section-{{ section.id }} .text-wrapper {
      {{ special_section_padding }}
    }
  {%- endif -%}
  }
{%- endstyle -%}
