{% style %}
  #section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
{% endstyle %}

<section id="section-{{ section.id }}" class="size-chart-section page-width">
  {% render 'saalt-main-size-chart', section: section %}
</section>

{% schema %}
{
  "name": "Saalt Size Chart",
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID (Optional)",
      "info": "t:sections.all.section_id.info"
    },
    {
      "type": "paragraph",
      "content": "❗️NOTE❗️: In order to adjust the size chart accent colors, please go to the \"Theme colors\" section of the Theme settings"
    },
    {
      "type": "text",
      "id": "size_chart_active_tab",
      "label": "Active tab",
      "info": "In order to set a specific tab as the active one on page load, type its name here exactly as it appears in the size chart metaobject entry. Otherwise, if this is left blank, the size chart will automatically make the first tab the active one."
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Saalt Size Chart",
      "category": "custom saalt section",
      "settings": {},
      "blocks": []
    }
  ]
}
{% endschema %}
